<?xml version="1.0" encoding="UTF-8" ?> 
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.reservation.ReservationMapper">
	
	<resultMap type="com.study.reservation.HairmenuDTO" id="hairmenuInfo">
		<result property="menu" column="menu"/>
		<result property="price" column="price"/>
		<result property="did" column="did"/>
		<result property="hgender" column="hgender"/>
		<collection property="category" resultMap="categoryInfo"/>
	</resultMap>
	
	<resultMap type="com.study.reservation.CategoryDTO" id="categoryInfo">
		<result property="catename" column="catename"/>
	</resultMap>

	<select id="list" parameterType="String"
		resultMap="hairmenuInfo">
		
		SELECT
		h.menu,
		h.price,
		h.did,
		h.hgender,
		c.catename
		FROM hairmenu h LEFT JOIN category c 
		ON h.cateno = c.cateno where h.did = #{id}

	</select>
	
	<select id="catenameList" parameterType="String" resultType="com.study.reservation.CategoryDTO">
		SELECT c.catename 
		FROM hairmenu h LEFT JOIN category c 
		ON h.cateno = c.cateno
		WHERE h.did = #{id}
	</select>
	
	<select id="menuPriceList" parameterType="String" resultType="com.study.reservation.HairmenuDTO">
		SELECT menu,price,hgender
		FROM hairmenu 
		WHERE did = #{id}
		 
	</select>


</mapper>