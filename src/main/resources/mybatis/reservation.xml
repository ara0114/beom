<?xml version="1.0" encoding="UTF-8" ?> 
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.reservation.ReservationMapper">
	
	
	
	<select id="menuInfo" parameterType="Map" resultType="com.study.reservation.HairmenuDTO">
		SELECT
		h.menu,
		h.price
		FROM hairmenu h LEFT JOIN category c
		ON h.cateno = c.cateno
		WHERE h.did = #{id} and c.catename = #{catename} and h.hgender = #{hgender}
		
		
	</select>
	
	<resultMap type="com.study.reservation.HairmenuDTO" id="hairmenuInfo">
		<result property="menu" column="menu"/>
		<result property="price" column="price"/>
		<result property="did" column="did"/>
		<result property="hgender" column="hgender"/>
		<result property="menuno" column="menuno"/>
		<collection property="category" resultMap="categoryInfo"/>
	</resultMap>
	
	<resultMap type="com.study.reservation.CategoryDTO" id="categoryInfo">
		<result property="catename" column="catename"/>
	</resultMap>

	<select id="list" parameterType="String"
		resultMap="hairmenuInfo">
		
		SELECT
		h.menu,
		h.menuno,
		h.price,
		h.did,
		h.hgender,
		c.catename
		FROM hairmenu h LEFT JOIN category c 
		ON h.cateno = c.cateno where h.did = #{id}

	</select>
	
	<select id="catenameList" parameterType="String" resultType="com.study.reservation.CategoryDTO">
		SELECT c.catename 
		FROM hairmenu h LEFT JOIN category c 
		ON h.cateno = c.cateno
		WHERE h.did = #{id}
	</select>
	
	<select id="menuPriceList" parameterType="String" resultType="com.study.reservation.HairmenuDTO">
		SELECT menu,price,hgender
		FROM hairmenu 
		WHERE did = #{id}
		 
	</select>
	
	<select id="menunoGet" parameterType="Map" resultType="com.study.reservation.HairmenuDTO">
		SELECT menuno 
		FROM hairmenu
		WHERE did = #{did} and menu = #{menu}	
	</select>
	
	<insert id="enrollInput" parameterType="Map">
	 	INSERT INTO 
	 	enroll (enrolldate,enrolltime,emenu,menuno,eprice,did) 
	 	values(#{date},#{time},#{emenu},#{menuno},#{eprice},#{did})
	</insert>
	
	<resultMap type="com.study.reservation.EnrollDTO" id="enrollListDTO">
		<result property="enrollno" column="enrollno"/>
		<result property="enrolldate" column="enrolldate"/>
		<result property="enrolltime" column="enrolltime"/>
		<result property="eprice" column="eprice"/>
		<result property="emenu" column="emenu"/>
		<result property="did" column="did"/>
		<collection property ="hairmenu"  resultMap="hairmenuGengerDTO" />
	</resultMap>
	
	<resultMap type="com.study.reservation.HairmenuDTO" id="hairmenuGengerDTO">
		<result property="hgender" column="hgender"/>
	</resultMap>
	
	<select id="enrollList" parameterType="String" resultMap="enrollListDTO">
		SELECT e.enrollno,e.did,e.menuno,e.enrolldate,e.enrolltime,e.eprice,e.emenu,h.hgender
		FROM enroll e LEFT JOIN hairmenu h
		ON e.menuno = h.menuno
		WHERE e.did = #{did}
	</select>
	
	<delete id="enrollDelete" parameterType="int">
		DELETE FROM enroll
		WHERE enrollno = #{deleteNo}
	</delete>
	
	
	


</mapper>